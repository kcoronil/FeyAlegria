{% block content %}
    <div class="row text-center">
        {#{% if form is defined %}#}
            <div class="col-sm-12 text-left">
                <div class="col-sm-12">
                    <div class="panel panel-info inscripcion_panel">
                        <div class="panel-heading">
                            <h2 class="panel-title">Agregar Pago</h2>
                            {#<a href="#crear_representante" data-toggle="modal" class="campaignModalLink btn btn-default btn-sm">Nuevo Representante</a>#}
                            {#<a href="#editar_estudiante" data-toggle="modal" class="campaignModalLink btn btn-default btn-sm agregar_representante_existente" data-url="{{ path('generico_lista_agregar_representante') }}">Agregar Representante Existente</a>#}
                        </div>
                        <div class="panel-body">
                            {% if formPagos %}
                                {{ form_start(formPagos) }}
                                    {{ form_row(formPagos.fechaDeposito) }}
                                    {{ form_row(formPagos.numeroDeposito) }}
                                    {{ form_row(formPagos.monto) }}
                                    {{ form_row(formPagos.banco) }}
                                    {{ form_row(formPagos.guardar) }}
                                <table class="table table-bordered table-hover table-responsive">
                                    {% for factura in facturasPorPagos %}
                                        <tr>
                                            <td><label><input type="checkbox" name="facturas[]" value="{{ factura.id }}"> Seleccionar para pagar</label></td>
                                            <th colspan="3" class="text-center">Datos de la Factura</th>
                                        </tr>
                                        <tr>
                                            <td>Estudiante:
                                                {{ factura.periodoEscolarCursoAlumnos.alumno.primerNombre }}
                                                {{ factura.periodoEscolarCursoAlumnos.alumno.primerApellido }}
                                            </td>
                                            <td>
                                                {% if factura.periodoEscolarCursoAlumnos.alumno.cedula %}
                                                    {{ factura.periodoEscolarCursoAlumnos.alumno.cedula }}
                                                {% else %}
                                                    {{ factura.periodoEscolarCursoAlumnos.alumno.cedulaEstudiantil }}
                                                {% endif %}
                                            </td>
                                            <td>{{ factura.fecha|date('d/m/Y')}}</td>
                                            <td>{{ factura.monto }}</td>
                                        </tr>
                                    {% endfor %}
                                </table>
                                {{ form_end(formPagos) }}
                            {% endif %}
                            {% if accion == 'Resumen Inscripción' %}
                                <h3>Resumen del proceso de Inscripción</h3>
                                <table class="table table-bordered table-responsive table-hover">
                                    <thead>
                                    <tr>
                                        <th colspan="4" class="text-center">Representantes</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for representante in representantes %}
                                    <tr>
                                        <th>nombre:</th>
                                        <td>{{ representante.primerNombre }} {{ representante.primerApellido }}</td>
                                        <th>cedula:</th>
                                        <td>{{ representante.cedula}}</td>
                                    </tr>
                                    </tbody>
                                    {% endfor %}
                                </table>
                                <table class="table table-bordered table-responsive table-hover">
                                    <thead>
                                    <tr>
                                        <th colspan="4" class="text-center">Estudiantes</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for estudiante in alumnosInscripcion %}
                                        <tr>
                                        <th>nombre:</th>
                                        <td>{{ estudiante.primerNombre }} {{ estudiante.primerApellido }}</td>
                                        <td>{{ estudiante.cedula }}</td>
                                            {% for periodos in periodos_alumnos %}
                                                {% for periodo in periodos %}
                                                    {% if periodo.Alumno.id == estudiante.id %}
                                                        <td>
                                                            {{ periodo.cursoSeccion.nombre }}
                                                        </td>
                                                    {% endif %}
                                                    {% for factura in facturas %}
                                                        {% if periodo.id == factura.PeriodoEscolarCursoAlumnos.id and factura.PeriodoEscolarCursoAlumnos.alumno.id == estudiante.id %}
                                                            <td>
                                                                <a href="{{ path('generico_recibo_pago', { 'id': factura.id }) }}">Recibo cobro inscripción</a>
                                                            </td>
                                                        {% endif %}
                                                    {% endfor %}
                                                {% endfor %}
                                            {% endfor %}
                                            </tr>
                                            <tr>
                                            <td colspan="2" class="text-center">
                                                <a href="{{ path('generico_constancia_inscripcion', { 'id': estudiante.id }) }}">Constancia inscripción</a>
                                            </td>
                                            <td colspan="3" class="text-center">
                                                <a href="{{ path('generico_constancia_estudios', { 'id': estudiante.id }) }}">Constancia de Estudios</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            {% endif %}
                            {{ form_start(formInscripcion) }}
                                {{ form_widget(formInscripcion) }}
                            {{ form_end(formInscripcion) }}
                        </div>
                    </div>
                </div>
            </div>
        {#{% endif %}#}
    </div>

    <div style="display: none;" aria-hidden="true" role="dialog" tabindex="-1" id="crear_representante" class="crear-modal modal fade">
        <div class="modal-content">
            <div data-dismiss="modal" class="close-modal">
                <div class="lr">
                    <div class="rl">
                    </div>
                </div>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            {{render(controller("genericoBundle:Default:formulario_crear_representante_generico"))}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div style="display: none;" aria-hidden="true" role="dialog" tabindex="-1" id="crear_estudiante" class="form_estudiante crear-modal modal fade">
        <div class="modal-content">
            <div data-dismiss="modal" class="close-modal">
                <div class="lr">
                    <div class="rl">
                    </div>
                </div>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            {{render(controller("genericoBundle:Default:formulario_crear_estudiante_generico"))}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div style="display: none;" aria-hidden="true" role="dialog" tabindex="-1" id="editar_estudiante" class="form_estudiante crear-modal modal fade">
        <div class="modal-content">
            <div data-dismiss="modal" class="close-modal close_ajax_modal">
                <div class="lr">
                    <div class="rl">
                    </div>
                </div>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div id="ajax_modal_content" class="col-md-10 col-md-offset-1">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}