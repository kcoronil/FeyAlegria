{% extends '::plantilla.html.twig' %}
{% block content %}
    <div class="col-sm-4 col-sm-offset-4">
    {% if not app.session.get('autenticado') %}
        <div class="panel panel-info">
            <div class="panel-heading">
                <h2 class="panel-title">Ingreso al Sistema</h2>
            </div>
            <div class="panel-body">
                <form class="form-signin" method="POST" action="{{path('inicial_homepage')}}">
                    <div class="form-group">
                        <label for="inputEmail" class="sr-only">Nombre de Usuario</label>
                        <input type="text" id="usuario" class="form-control" name="usuario" placeholder="Nombre de Usuario" required autofocus>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword" class="sr-only">Clave</label>
                        <input type="password" id="Password" class="form-control" name="password" placeholder="Clave" required>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary btn-default" type="submit">Iniciar Sesion</button>
                        <a class="btn btn-default" href="{{ path('inicial_solicitar_pass') }}">Recuperar Contrase√±a</a>
                    </div>
                </form>
            </div>
        </div>
    {% endif %}
      </div>
      
    {% if app.session.get('autenticado') %}
        <div class="page-header"></div>
            <div class="botones">
              <p>
              <a href="{{ path('inicial_representante') }}">
                <button type="button" class="btn btn-lg btn-success"><span class="glyphicon glyphicon-user" aria-hidden="true"></span><br />Representante</button>
              </a>
              <a href="{{ path('inicial_estudiante') }}">
                <button type="button" class="btn btn-lg btn-primary"><span class="glyphicon glyphicon-education" aria-hidden="true"></span><br />Estudiante</button>
              </a>
              <a href="{{ path('inicial_administrador') }}">
                <button type="button" class="btn btn-lg btn-warning"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span><br />Administrador</button>
              </a>
              </p>
        </div>
    {% endif %}
    </div>
{% endblock %}